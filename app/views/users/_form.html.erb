<h1 align="center"> USER INFORMATION FORM </h1>

<%= form_with model: @user do |form| %>
<h2> Personal Information </h2>
	<div>
    <%= form.label :firstname %><br>
    <%= form.text_field :firstname %>
    <% @user.errors.full_messages_for(:firstname).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

	<div>
    <%= form.label :lastname %><br>
    <%= form.text_field :lastname %>
    <% @user.errors.full_messages_for(:lastname).each do |message| %>
      <div><%= message %></div>
    <% end %>
	</div>

  <div>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
    <% @user.errors.full_messages_for(:email).each do |message| %>
      <div><%= message %></div>
    <% end %>
	</div>

  <div>
    <%= form.label :dob %><br>
    <%= form.date_field :dob %>
    <% @user.errors.full_messages_for(:dob).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :gender %><br>
    <%= form.radio_button :gender, "Male" %>
    <%= form.label :male, "Male" %>
    <%= form.radio_button :gender, "female" %>
    <%= form.label :female, "female" %>
    <% @user.errors.full_messages_for(:gender).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

	<div>
    <%= form.label :address %><br>
    <%= form.text_area :address %>
    <% @user.errors.full_messages_for(:address).each do |message| %>
      <div><%= message %></div>
    <% end %>
	</div>

  <div>
    <%= form.label :contact %><br>
    <%= form.text_field :contact %>
    <% @user.errors.full_messages_for(:contact).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div><br>

<h2> Professional Information </h2>
  <div>
    <%= form.label :company %><br>
    <%= form.text_field :company %>
    <% @user.errors.full_messages_for(:company).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :companyMail %><br>
    <%= form.text_field :companyMail %>
    <% @user.errors.full_messages_for(:companyMail).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :technology %><br>
    <%= form.text_field :technology %>
    <% @user.errors.full_messages_for(:technology).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :workLocation %><br>
    <%= form.text_area :workLocation %>
    <% @user.errors.full_messages_for(:workLocation).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :salary %><br>
    <%= form.text_field :salary %>
    <% @user.errors.full_messages_for(:salary).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div> 

  <div>
    <%= form.label :experience %><br>
    <%= form.text_field :experience %>
    <% @user.errors.full_messages_for(:experience).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div><br>

  <div>
    <%= form.submit %>
  </div>

<% end %>